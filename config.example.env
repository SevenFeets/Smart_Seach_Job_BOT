# LinkedIn Credentials
LINKEDIN_EMAIL=your_email@example.com
LINKEDIN_PASSWORD=your_password

# Job Search Configuration
JOB_KEYWORDS=Python Developer,Software Engineer,Backend Developer
EXPERIENCE_LEVELS=ENTRY_LEVEL,ASSOCIATE,MID_SENIOR
LOCATION=Remote
DATE_POSTED=PAST_WEEK

# Auto Apply Settings
AUTO_APPLY_ENABLED=true
MAX_APPLICATIONS_PER_RUN=10

# CV/Resume Configuration
# Option 1: Single resume (legacy)
RESUME_PATH=./resumes/my_resume.pdf

# Option 2: Multiple resumes with smart selection (RECOMMENDED)
# Place your resumes in the resumes/ folder with these names:
# - resumes/Backend.pdf (for backend/API jobs)
# - resumes/embedded.pdf (for embedded/firmware jobs)
# The bot will automatically select the best resume based on job keywords
USE_SMART_RESUME_SELECTION=true

# AI Cover Letter Generation
# Option 1: OpenAI (paid)
# OPENAI_API_KEY=sk-...

# Option 2: Ollama (free, local or remote)
OLLAMA_BASE_URL=http://localhost:11434
# For remote Ollama (e.g., hosted on another server)
# OLLAMA_BASE_URL=https://your-ollama-server.com
OLLAMA_MODEL=llama2
# Optional: API key if your Ollama server requires authentication
# OLLAMA_API_KEY=your_ollama_api_key

# Option 3: Groq (free tier available)
# GROQ_API_KEY=gsk_...

# Option 4: Google AI (free tier)
# GOOGLE_AI_API_KEY=...

# LLM Provider Choice: openai, ollama, groq, google
LLM_PROVIDER=ollama

# Scheduler Settings
SCHEDULER_START_HOUR=8
SCHEDULER_END_HOUR=18
SCHEDULER_INTERVAL_MINUTES=60

# Database
DATABASE_URL=sqlite:///./data/jobs.db

# Browser Settings
HEADLESS=true
SLOW_MO=100
